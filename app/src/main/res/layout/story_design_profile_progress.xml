<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view12"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80font_mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePlatformImage"
        android:layout_width="@dimen/_50font_mdp"
        android:layout_height="@dimen/_45font_mdp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_profile_svgrepo_com"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="@+id/view12"
        app:layout_constraintTop_toTopOf="@+id/view12" />

    <TextView
        android:id="@+id/profileCodingPlatformName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Coding Platform"
        app:layout_constraintStart_toStartOf="@+id/profilePlatformImage"
        app:layout_constraintTop_toBottomOf="@+id/profilePlatformImage" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Total Number Of Problem Solved"
        app:layout_constraintEnd_toStartOf="@+id/profileProblemSolve"
        app:layout_constraintStart_toEndOf="@+id/profilePlatformImage"
        app:layout_constraintTop_toTopOf="@+id/profilePlatformImage" />

    <TextView
        android:id="@+id/profileProblemSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Rating"
        app:layout_constraintEnd_toStartOf="@+id/profileRating"
        app:layout_constraintStart_toEndOf="@+id/profilePlatformImage"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/profileRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="1820"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileProblemSolve" />
</androidx.constraintlayout.widget.ConstraintLayout>