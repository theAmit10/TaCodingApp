<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="-4dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/ProblemTagName"
        app:layout_constraintEnd_toEndOf="@+id/ProblemTagName"
        app:layout_constraintStart_toStartOf="@+id/ProblemTagName"
        app:layout_constraintTop_toTopOf="@+id/ProblemTagName" />

    <TextView
        android:id="@+id/ProblemTagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>